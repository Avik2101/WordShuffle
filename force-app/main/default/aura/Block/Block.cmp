<aura:component description="Block" implements="flexipage:availableForAllPageTypes">

    <aura:attribute name="wordLabel" type="string" access="public"></aura:attribute>
    <aura:attribute name="isOpen" type="boolean" default="false"></aura:attribute>
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"></aura:handler>

    <!--Register the block click event -->
    <aura:registerEvent name="onClick" type="c:BlockClickEvent"></aura:registerEvent>

    <div class="board-block slds-box slds-theme_shade slds-theme_alert-texture"
         onclick="{!c.blockClicked}" onmouseleave="{!c.leaveBlock}">
        <p class="slds-text-heading_medium slds-text-title_caps slds-text-title_bold" >
            <aura:if isTrue="{!v.isOpen}">
                {!v.wordLabel}
            </aura:if>
        </p>
    </div>

</aura:component>